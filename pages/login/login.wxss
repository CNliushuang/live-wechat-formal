/* pages/login/login.wxss */

.login_wrapper{
  padding: 0 40rpx;
}

.login_wrapper .user{
  margin-top: 150rpx;
}

.login_wrapper .user .icon{
  width: 154rpx;
  height: 154rpx;
  border-radius: 100%;
  background: pink;
  margin: 0 auto;
  box-shadow: 0 9px 17px 0 rgba(0,0,0,0.20);
}
.login_wrapper .user .icon image{
  width: 154rpx;
  height: 154rpx;
  border-radius: 100%;
}

.login_wrapper .user .name{
  text-align: center;
  font-size: 32rpx;
  color: #000;
  margin-top: 35rpx;
}
.login_wrapper .login_form{
  margin-top: 40rpx;
}
.login_wrapper .login_form .items{
  width: 100%;
  height: 97rpx;
  line-height: 97rpx;
  background: #ffffff;
  border-radius: 100px;
  margin-bottom: 26rpx;
}

.login_wrapper .login_form .items.mobile{
  border: 1rpx solid #979797;
}


.login_wrapper .login_form .items input{
  height: 97rpx;
  line-height: 97rpx;
  width: 100%;
  padding:0 50rpx;
  box-sizing: border-box;
  border-radius: 100px;
  font-size: 28rpx;
  color: #9B9B9B;
}

.login_wrapper .login_form .items.code .get_code{
  width: 216rpx;
  height: 97rpx;
  background: #DB3069;
  float: right;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border:1rpx solid #DB3069;
  border-top-right-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
}

.login_wrapper .login_form .items.code .get_code.disabled{
  background: #D8D8D8;
  border:1rpx solid #D8D8D8;
}

.login_wrapper .login_form .items.code .code_box{
  display: block;
  margin-right: 218rpx;
  border: 1rpx solid #979797;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px;
}
.login_wrapper .login_form .btn{
  margin-top: 57rpx;
}

.login_wrapper .login_form .btn.login{
  position: relative;
}
.login_wrapper .login_form .btn.login button{
  width:100%;
  height:97rpx;
  line-height:97rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: none;
  border: none;
  opacity: 0;

}




.login_wrapper .plat_list{
  margin-top: 40rpx;
}
.login_wrapper .plat_list .items{
  background: #FFFFFF;
  border: 1rpx solid #979797;
  border-radius: 100rpx;
  width: 100%;
  height: 97rpx;
  line-height: 97rpx;
  text-align: center;
  font-size: 28rpx;
  color: #000000;
  margin-bottom: 26rpx;
}

.login_wrapper .plat_list .items.active{
  border: 3rpx solid #DB3069;
  color: #DB3069;
}




