/* pages/components/upload/upload.wxss */
page{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}
.files{
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  background: #fff;
  min-height: 96rpx;
  margin: 15rpx 0;
  padding: 10rpx;
}

.files .left_files{
  width: 80rpx;
  height: 80rpx;
  float: left;
  margin-top:6rpx;
}

.files .left_files image{
  width: 80rpx;
  height: 80rpx;
}

.files .right_files{
  margin-left: 100rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
  padding-right: 40rpx;
}
.files .right_files .size{
  font-size: 24rpx;
  color: #aaa;
}

.files .right_files .result{
  color: #77a8e4;
  margin-top: 10rpx;
}

.files .right_files .result .success{
  color: #5cb85c;
}


.files .right_files .delete{
  width: 60rpx;
  height: 96rpx;
  position: absolute;
  right: 0;
  top: 0;
  text-align: center;
}

.files .right_files .delete image{
  width: 40rpx;
  height: 40rpx;
  display:inline-block;
  margin-top:20rpx;
}
.files_box{
  height: calc(100% - 136rpx);
  overflow-y:auto;
  overflow-x: hidden;
}
.submit_box{
  padding: 0 50rpx;
}

.submit_box .submit{
  width:45%;
  height:96rpx;
  background:#77a8e4;
  border-radius:10rpx;
  color:#fff;
  line-height:96rpx;
  text-align:center;
  font-size:28rpx;
  display:inline-block;
  margin-right:5%;
  box-sizing: border-box;
}

.submit_box .submit.upload{
  background: none;
  border:2rpx solid #77a8e4;
  color: #77a8e4;
}
