/* pages/cash/cash.wxss */
.cash_wrapper{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.cash_wrapper .cash_container{
  padding: 0 40rpx;
}

.cash_wrapper .cash_container .info{
  font-size: 24rpx;
  color: #9B9B9B;
  text-align: center;
  margin-bottom: 12rpx;
}

.cash_wrapper .cash_container .info.info_money{
  margin-top: 60rpx;
}

.cash_wrapper .cash_container .info.info_identify{
  margin-top: 98rpx;
}


.cash_wrapper .cash_container .input_box{
  width: 100%;
  height: 97rpx;
  line-height: 97rpx;
  background: #FFFFFF;
  border: 1px solid #979797;
  border-radius: 100px;
  margin-bottom: 18rpx;
}

.cash_wrapper .cash_container .input_box input{
  width: 100%;
  height: 97rpx;
  line-height: 97rpx;
  background: #FFFFFF;
  border-radius: 100px;
  padding-left: 63rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #9B9B9B;
}



.cash_wrapper .cash_btn{
  padding: 0 40rpx;
  height: 190rpx;
  flex-shrink: 0;
  margin-top:20rpx;
}




