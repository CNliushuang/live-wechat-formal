/* pages/cash/cash.wxss */
.bind_wrapper{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.bind_wrapper .bind_container{
  padding: 0 40rpx;
}


.bind_wrapper .bind_flex_container{
  flex-grow: 1;
  height: 0;
}


.bind_wrapper .bind_container .info{
  font-size: 24rpx;
  color: #9B9B9B;
  text-align: center;
  margin-bottom: 12rpx;
}

.bind_wrapper .bind_container .info.info_money{
  margin-top: 60rpx;
}

.bind_wrapper .bind_container .info.info_identify{
  margin-top: 98rpx;
}


.bind_wrapper .bind_container .input_box{
  width: 100%;
  height: 97rpx;
  line-height: 97rpx;
  background: #FFFFFF;
  border: 1px solid #979797;
  border-radius: 100px;
  margin-bottom: 18rpx;
}

.bind_wrapper .bind_container .input_box input{
  width: 100%;
  height: 97rpx;
  line-height: 97rpx;
  background: #FFFFFF;
  border-radius: 100px;
  padding-left: 63rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #9B9B9B;
}



.bind_wrapper .cash_btn{
  padding: 0 40rpx;
  height: 190rpx;
  flex-shrink: 0;
}

.bind_wrapper .cash_btn .btn_info{
  font-size: 24rpx;
  color: #9B9B9B;
  text-align: center;
  margin-bottom: 12rpx;
}


